@model Libreria.Models.Reseña

@{
    ViewBag.Title = "Editar Reseña";
}

<div class="container mt-4">
    <h3 class="text-center">Editar Reseña</h3>
    <hr />

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="row justify-content-center">
            <div class="col-md-6">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                
               
                @Html.HiddenFor(model => model.IdReseña)
                @Html.HiddenFor(model => model.IdUsuario)
                @Html.HiddenFor(model => model.Fecha)
                @Html.HiddenFor(model => model.IdProducto)

          
                <div class="form-group">
                    @Html.LabelFor(model => model.Calificacion, "Calificación", new { @class = "font-weight-bold" })
                    <div class="input-group">
                        <span class="input-group-text"><i class="fas fa-star"></i></span>
                        <select name="Calificacion" class="form-control">
                            <option value="1" @(Model.Calificacion == 1 ? "selected" : "")>1 - Muy mala</option>
                            <option value="2" @(Model.Calificacion == 2 ? "selected" : "")>2 - Mala</option>
                            <option value="3" @(Model.Calificacion == 3 ? "selected" : "")>3 - Regular</option>
                            <option value="4" @(Model.Calificacion == 4 ? "selected" : "")>4 - Buena</option>
                            <option value="5" @(Model.Calificacion == 5 ? "selected" : "")>5 - Excelente</option>
                        </select>
                    </div>
                    @Html.ValidationMessageFor(model => model.Calificacion, "", new { @class = "text-danger" })
                </div>

           
                <div class="form-group">
                    @Html.LabelFor(model => model.Comentario, "Comentario", new { @class = "font-weight-bold" })
                    @Html.TextAreaFor(model => model.Comentario, new { @class = "form-control", rows = 4, placeholder = "Escribe tu comentario aquí..." })
                    @Html.ValidationMessageFor(model => model.Comentario, "", new { @class = "text-danger" })
                </div>

                <div class="text-center mt-3">
                    <button type="submit" class="btn btn-success">
                        <i class="fas fa-save"></i> Guardar Reseña
                    </button>
                </div>

                <div class="text-center mt-2">
                    <a href="@Url.Action("Details", "Producto", new { id = Model.IdProducto })" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Volver al producto
                    </a>
                </div>

            </div>
        </div>
    }
</div>
