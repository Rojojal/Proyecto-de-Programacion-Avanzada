@model Libreria.Models.Reseña

@{
    ViewBag.Title = "Agregar Reseña";
}

<div class="container mt-4">
    <h3 class="text-center">Agregar Reseña para: @ViewBag.ProductoNombre</h3>
    <hr />

    @using (Html.BeginForm("Create", "Reseña", new { idProducto = ViewBag.IdProducto }, FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="form-group">
                    @Html.LabelFor(model => model.Calificacion, "Calificación", new { @class = "font-weight-bold" })
                    <div class="input-group">
                        <span class="input-group-text"><i class="fas fa-star"></i></span>
                        <select name="Calificacion" class="form-control">
                            <option value="1">1 - Muy mala</option>
                            <option value="2">2 - Mala</option>
                            <option value="3">3 - Regular</option>
                            <option value="4">4 - Buena</option>
                            <option value="5">5 - Excelente</option>
                        </select>
                    </div>
                    @Html.ValidationMessageFor(model => model.Calificacion, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Comentario, "Comentario", new { @class = "font-weight-bold" })
                    @Html.TextAreaFor(model => model.Comentario, new { @class = "form-control", rows = 4, placeholder = "Escribe tu comentario aquí..." })
                </div>

                <div class="text-center mt-3">
                    <button type="submit" class="btn btn-success">
                        <i class="fas fa-paper-plane"></i> Enviar Reseña
                    </button>
                </div>

                <div class="text-center mt-2">
                    <a href="@Url.Action("Index", "Producto")" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Volver Atrás
                    </a>
                </div>
            </div>
        </div>
    }
</div>
