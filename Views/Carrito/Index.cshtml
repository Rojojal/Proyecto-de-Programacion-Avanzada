@model IEnumerable<Libreria.Models.Carrito>

@{
    ViewBag.Title = "Mi Carrito";
}

<div class="container mt-4">
    <h2 class="text-center">Tu carrito de compras.</h2>
    <p class="text-center text-muted">Aquí puedes gestionar los productos que deseas comprar.</p>

    <div class="text-right mb-3">
        <a href="@Url.Action("Create", "Carrito")" class="btn btn-primary">
            <i class="fas fa-plus"></i> Añadir Producto
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-warning text-center" role="alert">
            Tu carrito está vacío. ¡Añade productos para comenzar!
        </div>
    }
    else
    {
        <table class="table table-bordered table-hover">
            <thead class="thead-dark">
                <tr>
                    <th class="text-center">Usuario</th>
                    <th class="text-center">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="text-center">
                            @Html.DisplayFor(modelItem => item.IdUsuario)
                        </td>
                        <td class="text-center">
                            <a href="@Url.Action("Edit", "Carrito", new { id = item.IdCarrito })" class="btn btn-warning btn-sm">
                                <i class="fas fa-edit"></i> Editar
                            </a>
                            <a href="@Url.Action("Details", "Carrito", new { id = item.IdCarrito })" class="btn btn-info btn-sm">
                                <i class="fas fa-info-circle"></i> Detalles
                            </a>
                            <a href="@Url.Action("Delete", "Carrito", new { id = item.IdCarrito })" class="btn btn-danger btn-sm">
                                <i class="fas fa-trash-alt"></i> Eliminar
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
