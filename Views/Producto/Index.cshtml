@model IEnumerable<Libreria.Models.Producto>

@{
    ViewBag.Title = "Catálogo de Productos";
}

<div class="container mt-5">
    <h2 class="text-center">@ViewBag.Title</h2>

    @if (User.IsInRole("Admin"))
    {
        <div class="text-end mb-3">
            <a href="@Url.Action("Create", "Producto")" class="btn btn-success">
                <i class="fas fa-plus"></i> Añadir Producto
            </a>
        </div>
    }

    <div class="row">
        @foreach (var item in Model.Where(p => User.IsInRole("Admin") || (p.Estado == true)))
        {
            <div class="col-md-4 mb-4">
                <div class="card shadow-sm h-100">
                    @if (item.Imagenes != null && item.Imagenes.Count > 0)
                    {
                        <div id="productCarousel-@item.IdProducto" class="carousel slide" data-interval="false">
                            <div class="carousel-inner">
                                @for (var i = 0; i < item.Imagenes.Count; i++)
                                {
                                    var image = item.Imagenes.ElementAt(i);
                                    <div class="carousel-item @(i == 0 ? "active" : "")">
                                        <img src="@image.ImageUrl" class="d-block w-100" alt="Product Image @i">
                                    </div>
                                }
                            </div>
                            <a class="carousel-control-prev" href="#productCarousel-@item.IdProducto" role="button" data-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                <span class="sr-only">Previous</span>
                            </a>
                            <a class="carousel-control-next" href="#productCarousel-@item.IdProducto" role="button" data-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                <span class="sr-only">Next</span>
                            </a>
                        </div>
                    }

                    <div class="card-body">
                        <h5 class="card-title">@item.Nombre</h5>
                        <p class="card-text"><strong>Precio:</strong> $@item.Precio</p>
                        <p class="card-text"><strong>Disponibilidad:</strong> @(item.Disponibilidad ? "Disponible" : "Agotado")</p>
                    </div>
                    <div class="card-footer text-center">
                        <a href="@Url.Action("Details", "Producto", new { id = item.IdProducto })" class="btn btn-primary">
                            <i class="fas fa-info-circle"></i> Ver Detalles
                        </a>

                        @if (User.IsInRole("Admin"))
                        {
                            <a href="@Url.Action("Edit", "Producto", new { id = item.IdProducto })" class="btn btn-warning">
                                <i class="fas fa-edit"></i> Editar
                            </a>
                            <a href="@Url.Action("Delete", "Producto", new { id = item.IdProducto })" class="btn btn-danger">
                                <i class="fas fa-trash"></i> Eliminar
                            </a>
                        }
                        
                        <form action="@Url.Action("AgregarProductoCarrito", "Carrito")" method="post" class="mt-2">
                            <input type="hidden" name="idProducto" value="@item.IdProducto" />
                            <input type="hidden" name="cantidad" value="1" />
                            <button type="submit" class="btn btn-success" @(item.Disponibilidad ? "" : "disabled title='Producto no disponible'")>
                                <i class="fas fa-shopping-cart"></i> Añadir al carrito
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
