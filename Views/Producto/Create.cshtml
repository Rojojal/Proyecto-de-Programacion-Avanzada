@model Libreria.Models.Producto

@{
    ViewBag.Title = "Crear Producto";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm(null, null, FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="container">
        <h4>Ingrese los detalles del producto</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="mb-3">
            @Html.LabelFor(model => model.Nombre, new { @class = "form-label" })
            @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
        </div>

        <div class="mb-3">
            @Html.LabelFor(model => model.Precio, new { @class = "form-label" })
            @Html.EditorFor(model => model.Precio, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Precio, "", new { @class = "text-danger" })
        </div>

        <div class="mb-3">
            @Html.LabelFor(model => model.Disponibilidad, new { @class = "form-label" })
            @Html.CheckBoxFor(model => model.Disponibilidad, new { @class = "form-check-input" })
            @Html.ValidationMessageFor(model => model.Disponibilidad, "", new { @class = "text-danger" })
        </div>

        @Html.HiddenFor(model => model.Estado, new { @Value = true })

        <div class="mb-3">
            @Html.Label("Subir Imagen", new { @class = "form-label" })
            <input type="file" name="ImagenFiles" class="form-control" multiple accept="image/*" />
            <p class="help-block">Seleccione una o varias imágenes (JPG, PNG, GIF).</p>
        </div>

        <div class="mb-3 text-center">
            <input type="submit" value="Crear Producto" class="btn btn-primary" />
        </div>
    </div>
}

<div class="mt-3">
    @Html.ActionLink("Volver a la lista", "Index", new { @class = "btn btn-link" })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
