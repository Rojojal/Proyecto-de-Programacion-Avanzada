@model Libreria.Models.IndexViewModel
@{
    ViewBag.Title = "Administrar";
}

<main class="container py-5" aria-labelledby="title">
    <section class="text-center mb-4">
        <h1 id="title" class="display-4 fw-bold" style="color: #2c3e50;">@ViewBag.Title</h1>
        <p class="text-success">@ViewBag.StatusMessage</p>
    </section>

    <div class="card shadow-sm border-0 rounded">
        <div class="card-body">
            <h4 class="fw-bold mb-4">Configuración de la cuenta</h4>
            <hr />

            <dl class="row">
                <dt class="col-md-4 fw-semibold">Contraseña:</dt>
                <dd class="col-md-8">
                    @if (Model.HasPassword)
                    {
                        @Html.ActionLink("Cambiar la contraseña", "ChangePassword", new { @class = "btn btn-link text-decoration-none" })
                    }
                    else
                    {
                        @Html.ActionLink("Crear", "SetPassword", new { @class = "btn btn-link text-decoration-none" })
                    }
                </dd>
            </dl>
        </div>
    </div>
</main>
