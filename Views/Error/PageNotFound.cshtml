@{
    ViewBag.Title = "Página No Encontrada";
}

<div class="container text-center py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm border-0 rounded">
                <div class="card-body">
                    <h2 class="display-3 text-danger">
                        <i class="fas fa-exclamation-triangle"></i> 404
                    </h2>
                    <h3 class="text-muted">¡Página no encontrada!</h3>
                    <p class="lead">La página que estás buscando no existe o ha sido movida. Verifica la URL e inténtalo de nuevo.</p>
                    <hr />
                    <p class="text-muted">Si el problema persiste, contacta con el soporte técnico.</p>
                    <div class="mt-4">
                        <a href="@Url.Action("Index", "Home")" class="btn btn-primary btn-lg">
                            <i class="fas fa-home"></i> Volver a la página principal
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
